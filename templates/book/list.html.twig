<style>
    .card-faded .card-img-overlay {
        background-color: rgba(51, 51, 51, 0.5);
    }
</style>

<div class="row row-grid">
    {% for book in books %}
    <div class="col-lg-3 col-md-4 col-6 mb-5">
        <div class="card card-faded card-lift--hover shadow border-0">
            <img class="card-img-top img-responsive" src="{{ asset('/covers/' ~ book.cover) }}" alt="{{ book.title }}">
            <a class="card-img-overlay" href="{{ path('book_show', {'id': book.id}) }}">
                <h5 class="text-white text-uppercase">{{ book.title }}</h5>
                <p class="description text-white mt-3">
                    {% for author in book.authors %}
                        {{ author.fullname }} {% if not loop.last %}, {% endif %}
                    {% endfor %}
                </p>
            </a>
        </div>
    </div>
    {% else %}
    <div class="col-12">
        <h2 class="display-3 text-white mb-5">{{ 'site.no_books'|trans }}</h2>
    </div>
    {% endfor %}
</div>