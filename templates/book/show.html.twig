{% extends 'base.html.twig' %}

{% block title %}{{ book.title }}{% endblock %}

{% block body %}
<div class="card shadow mt--300">
    <div class="p-5">
        <div class="row">
            <div class="col-lg-4">
                <img src="{{ asset('/covers/' ~ book.cover) }}" alt="{{ book.title }}" class="img-fluid rounded">
            </div>
            <div class="col-lg-8">
                <h1 class="display-3">
                    {{ book.title }}<br>
                    {% if book.authors is not empty %}
                        <small class="text-muted">
                            {% for author in book.authors %}
                                {{ author.fullname }} {% if not loop.last %}, {% endif %}
                            {% endfor %}
                        </small>
                    {% endif %}
                </h1>
                <span>
                    {{ 'form.book.isbn'|trans }}: {{ book.isbn }} <br>
                    {{ 'form.book.year'|trans }}: {{ book.publicationYear }} <br>
                    {{ 'form.book.pages'|trans }}: {{ book.pageCount }}
                </span>
                <div class="btn-wrapper mt-3">
                    <a href="{{ path('book_edit', {'id': book.id}) }}" class="btn btn-primary btn-sm">
                        <i class="fa fa-edit mr-1"></i>
                        {{ 'form.edit'|trans }}
                    </a>
                    <a href="{{ path('book_remove', {'id': book.id}) }}" class="btn btn-danger btn-sm">
                        <i class="fa fa-trash mr-1"></i>
                        {{ 'form.delete'|trans }}
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
