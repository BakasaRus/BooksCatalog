{% extends 'base.html.twig' %}

{% block title %}Список авторов{% endblock %}

{% block body %}

<div class="card shadow mt--300">
    <table class="table table-hover table-striped mb-0">
        <thead class="text-center">
            <tr>
                <th>ФИО</th>
                <th>Количество книг</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            {% for author in authors %}
                <tr>
                    <td data-toggle="tooltip" data-placement="top" title="{{ author.surname }} {{ author.name }} {{ author.midname }}">
                        <a href="/author/{{ author.id }}">{{ author.fullname }}</a>
                    </td>
                    <td>{{ author.books|length }}</td>
                    <td>
                        <a class="btn btn-sm btn-icon btn-2 btn-primary" href="/author/{{ author.id }}/edit">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a class="btn btn-sm btn-icon btn-2 btn-danger" href="/author/{{ author.id }}/remove">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
